@model IEnumerable<TruYumWeb.Models.Cart>

@{
    ViewBag.Title = "Index";
}

<h2>View Cart</h2>
@{ double sum = 0; }
@if (Model.Count() == 0)
{
    <p>Cart is Empty.</p> }
else
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MenuItem.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuItem.FreeDelivery)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuItem.Price)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MenuItem.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MenuItem.FreeDelivery)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MenuItem.Price)
                    @{
                        sum += item.MenuItem.Price;
                    }
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
        <tr><td></td><td>Total Amount</td><td>@sum</td><td></td></tr>
    </table>}


@Html.ActionLink("View menu items", "Index", "MenuItems")
